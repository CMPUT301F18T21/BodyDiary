<resources>

    <style name="PatientTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/colorStatusBar</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="CPTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/colorStatusBarCP</item>
        <item name="colorPrimary">@color/colorPrimaryDarkCP</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="BothTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/colorStatusBarBoth</item>
        <item name="colorPrimary">@color/colorPrimaryBothDark</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

</resources>
