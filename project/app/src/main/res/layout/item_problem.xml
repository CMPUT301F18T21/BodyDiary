<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:padding="6dp">

        <TextView
            android:id="@+id/problem_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/problem_item_record_count"
            android:text="Problem"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="?android:textAppearanceLarge" />


        <TextView
            android:id="@+id/problem_item_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/problem_item_title"
            android:text="Date"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/problem_item_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/problem_item_date"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Problem Desc"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/problem_item_record_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/problem_item_options"
            android:text="X Records"
            android:textAppearance="?android:textAppearanceMedium" />

        <ImageButton
            android:id="@+id/problem_item_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:background="#FFFF"
            card_view:srcCompat="@drawable/ic_baseline_more_vert_24px" />


    </RelativeLayout>

</android.support.v7.widget.CardView>

