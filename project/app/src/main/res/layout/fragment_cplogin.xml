<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loginFragmentBackground"
    tools:context=".LogInFragments.CPLoginFragment"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/cpUsernameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="username"
            android:textColor="@color/drawableWhite"
            android:backgroundTint="@color/drawableWhite"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"
            android:textColorHint="@color/hintForeground"/>

        <Button
            android:id="@+id/cpLoginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textColor="@color/drawableWhite"
            android:background="@drawable/button_border"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginBottom="8dp"
            android:text="LOG IN"/>
    </LinearLayout>

</FrameLayout>